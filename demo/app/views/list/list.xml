<Page loaded="pageLoaded">
    <Page.actionBar>
		<ActionBar title="{N} Vanilla">
			<ActionBar.actionItems>
				<ActionItem text="Create" tap="{{ create }}" ios.position="right" />
			</ActionBar.actionItems>
		</ActionBar>
	</Page.actionBar>
    <ListView items="{{ personList }}" class="list-group">
        <ListView.itemTemplate>
            <StackLayout class="list-group-item">
                <Label text="{{ (firstname + ' ' + lastname) }}" />
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>